package estruturaRepeticao;

import java.util.Scanner;

public class While {

	public static void main(String[] args) {
		
		Scanner ler = new Scanner(System.in);
		
		int idade;
		System.out.print("Digite sua idade:");
		idade = ler.nextInt();
		
		while(idade >= 1) {
			System.out.printf("Sua idade é %d",idade);
		}

	}

}
